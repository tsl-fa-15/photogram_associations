<!-- Validation failure messages -->

<% if @favorite.errors.any? %>
  <% @favorite.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Favorite</h3>
      </div>
      <div class="panel-body">
        <%= form_tag favorites_url, :method => "post", :class => "form-horizontal" do %>
          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name, @favorite.user_id), class: 'form-control' %>
            </div>
          </div>

          <!-- Label and input for photo_id -->
          <div class="form-group">
            <label for="photo_id" class="col-sm-2 control-label">
              Photo
            </label>
            <div class="col-sm-10">
              <%= select_tag :photo_id, options_from_collection_for_select(Photo.all, :id, :caption, @favorite.photo_id), class: 'form-control  ' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Favorite" class="btn btn-success">
              or
              <a href="/favorites">Cancel</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
