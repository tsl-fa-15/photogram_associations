<h1>Add A New photo</h1>
<% if @photo.errors %>
  <ul>
    <% @photo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_tag(photos_path) do %>
  <div class="form-group">
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" class="form-control" type="text" name="the_caption" value="<%= @photo.caption %>">
  </div>
  <div class="form-group">
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" class="form-control" type="text" name="the_source" value="<%= @photo.source %>">
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">User:</label>
    <%= select_tag(:user_id, options_from_collection_for_select(@users, :id, :name, @photo.user_id), class: 'form-control', include_blank: true) %>
  </div>
  <div class="form-group">
    <input class="btn btn-default" type="submit" value="Create photo">
  </div>
<% end %>

