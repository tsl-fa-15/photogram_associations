<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">User #<%= @user.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
              <h1><%= @user.name %> <small><%= @user.email %><small></h1>

              <%= image_tag @user.image_url %>


            <div class="btn-group btn-group-justified">
              <%= link_to users_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_user_url(@user.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to user_url(@user.id), :method => "delete", :data => { :confirm => "Do you really want to delete this user?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2><%= @user.name %>'s photos</h2>
  </div>
</div>
<% @user.photos.each do |photo| %>
  <div class="row">
    <div class="well col-md-8 col-md-offset-2">
      <div class="thumbnail">
        <img alt="<%= photo.caption %>" class="img-responsive" src="<%= photo.source %>">
        <div class="caption">
          <p class="lead"><%= photo.caption %></p>
          <p>
            <%= link_to photo_path(photo.id), :class => "btn btn-primary" do %>
              <i class="fa fa-search-plus"></i>
            <% end %>
            <a class="btn btn-success" href="//htmlpreview.github.io/?https://github.com/boothappdev/bootstrap_exercises/blob/master/photogram/solution.html#">
              <i class="fa fa-heart-o"></i>
            </a>

            <%= link_to edit_photo_path(photo.id), :class => "btn btn-warning" do %>
              <i class="fa fa-edit"></i>
            <% end %>

            <%= link_to photo_path(photo.id), :class => "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>









